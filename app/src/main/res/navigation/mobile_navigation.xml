    <fragment
        android:id="@+id/navigation_verVentas"
        android:name="com.example.chikendinner.ui.VerVentas"
        android:label="@string/title_show_ventas"
        tools:layout="@layout/fragment_ver_ventas" />
    <fragment
        android:id="@+id/navigation_verProductos"
        android:name="com.example.chikendinner.ui.VerProductos"
